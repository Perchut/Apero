{% extends "AperoUserBundle::layout.html.twig" %}

{% block title %}
	Utilisateurs et roles - {{ parent() }}
{% endblock %}

{% block body %}

  <h3>Liste des Utilisateurs et leur Roles</h3>

	<ul>
    	{% for user in users %}
    	<li>
        	{{ user.username }}
            <ul>
                {% for role in user.roles %}
                <li>
                    {{ role }}
                </li>
                {% else %}
                <li>Pas (encore) de r√¥les</li>
                {% endfor %}
            </ul>
            <a href="{{ path('apero_user_role_change_role', {'username': user.username}) }}">Modifier</a>
    	</li>
    	{% else %}
      		<li>Pas (encore) d'utilisateurs</li>
    	{% endfor %}
	</ul>

{% endblock %}