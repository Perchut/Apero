{% extends "AperoUserBundle::layout.html.twig" %}

{% block title %}
	Amis - {{ parent() }}
{% endblock %}

{% block body %}

  <h3>Liste de vos Amis</h3>

	<ul>
    	{% for ami in amis %}
    	<li>
        	{{ ami.username }}
    	</li>
    	{% else %}
      		<li>Pas (encore) d'amis</li>
    	{% endfor %}
	</ul>

{% endblock %}